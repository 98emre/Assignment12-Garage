@model IEnumerable<Assignment12_Garage.Models.Vehicle>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if(TempData.ContainsKey("Message")){
    <div class="alert alert-warning" role="alert">
         @TempData["Message"]
    </div>
}

<form asp-action="Filter" method="get" class="form-inline mb-3">
    <div class="form-group mr-2">
        <input type="text" class="form-control" name="regNumber" placeholder="Search by registration number">
    </div>
    <div class="form-group mr-2">
        <input type="text" class="form-control" name="color" placeholder="Search by color">
    </div>
    <div class="form-group mr-2">
        <input type="text" class="form-control" name="brand" placeholder="Search by brand">
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Sort" asp-route-sortOrder="vehicleType">Vehicle Type</a>
            </th>

            <th>
                <a asp-action="Sort" asp-route-sortOrder="regNumber">Registration Number</a>
            </th>

            <th>
                <a asp-action="Sort" asp-route-sortOrder="color">Color</a>
            </th>

            <th>
                <a asp-action="Sort" asp-route-sortOrder="brand">Brand</a>
            </th>

            <th>
                <a asp-action="Sort" asp-route-sortOrder="vehicleModel">Vehicle Model</a>
            </th>

            <th>
                <a asp-action="Sort" asp-route-sortOrder="nrOfWheels">Number of Wheels</a>
            </th>

            <th>
               <a asp-action="Sort" asp-route-sortOrder="arrivalDate">Arrival Date</a>
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleModel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NrOfWheels)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArrivalDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

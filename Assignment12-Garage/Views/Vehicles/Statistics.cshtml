
@{
    ViewData["Title"] = "Statistics";
}

<h1>Statistics</h1>

<div class="table-responsive">
<table class="table table-bordered table-sm">
    <thead>
        <tr>
            <th>Vehicle Type</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var kvp in ViewBag.VehicleType)
        {
            <tr>
                <td>@kvp.Key</td>
                <td>@kvp.Value</td>
            </tr>
        }
    </tbody>
</table>
</div>

<div>
    <p>Total Revenue Est: @ViewBag.TotalRevenue kr</p>
</div>
<div>
    <p>Total Number of Wheels: @ViewBag.TotalWheels</p>
</div>

<a asp-action="Index" class="btn btn-secondary">Return Back</a>

